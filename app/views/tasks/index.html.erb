<div class="container text-center justify-content-center p-5">
<h1>My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
<li class="list-group-item">
  <input type="checkbox" value="<%= task.title %>" <%= 'checked' if task.completed %>>
  <%= link_to task.title, task_path(task) %>
</li>

<% end %>
</ul>

<%= link_to 'Create a new task.', tasks_new_path %>
</div>


